#vhost
<% if @port == 80 -%>
	NameVirtualHost *:80
<% end -%>

<VirtualHost *:<%= @port %> >
	ServerName <%= @domain %>
	DocumentRoot <%= @document_root %>
	
    <Directory />
	Options FollowSymLinks
	AllowOverride None
    </Directory>
    <Directory <%= @document_root %> >
	Options Indexes FollowSymLinks MultiViews
	AllowOverride All
	<% if @pform == "ubuntu" -%>
		Order allow,deny
		Allow from all
	<% else -%>
		Require all granted
	<% end -%>    
    </Directory>
</VirtualHost>
